<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(orders.length > 0) { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <% if(order.length > 0) { %>
                            <li class="orders__item">
                                <h2>#<%= order[0].orderId %> - <a href="/orders/<%= order[0].orderId %> ">Invoice</a></h2>
                                <ul class="orders__products">
                                    <% order.forEach(item => { %>
                                        <li class="orders__products-item"><%= item.title %> (<%= item.quantity %>)</li>
                                    <% }); %>
                                </ul>
                            </li>
                        <% } %>
                    <% }); %>
                </ul>
            <% } else { %>
                <div class="centered">
                    <h1>You didn't order anything yet</h1>
                </div>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>